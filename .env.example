# =============================================================================
# RideOps Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values for local development.
# In production (Railway), set these as service variables.

# Required
DATABASE_URL=postgresql://localhost/rideops
SESSION_SECRET=generate-a-random-64-char-string
NODE_ENV=production

# Optional — Email (SMTP)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
NOTIFICATION_FROM=noreply@ride-ops.com
NOTIFICATION_FROM_NAME=RideOps

# Optional — Features
DEMO_MODE=true
TENANT_FILE=tenants/usc-dart.json
DISABLE_RIDER_SIGNUP=false

# Optional — Database SSL (auto-enabled in production; set explicitly if needed)
# DATABASE_SSL=true
# PGSSLMODE=require
